CHIP Computer {
	
	IN Reset;

	PARTS:

	//ROM Start

	ROM32K(address=PCOut, out=fromROM);

	//ROM End

	//CPU Start

	CPU(fromM=fromROM, In=In, Reset=Reset, toM=toM, writeM=writeM, addressM=addressM, PCOut[0..14]=PCOut );

	//CPU End

	//Data Memory Start

	Memory(in=toM, load=writeM, address=addressM, out=fromM );

	//Data Memory End

}